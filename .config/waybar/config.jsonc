{
    "layer": "top",
    "position": "top",

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "network",
        "pulseaudio",
        "custom/spotify",
        "clock#1",
        "clock#2",
        "tray",
    ],

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": " ",
             "default": " ",
        },
    },
    "hyprland/window": {
        "rewrite": {
            "(.*) — Mozilla Firefox": "$1",
            "(.*) - Discord": "$1"
        }
    },

    "cpu": {
        "interval": 1,
        "format": " {usage}%",
        "tooltip": false
    },
    "memory": {
        "interval": 1,
        "format": " {used:.2f}/{total:.0f}GB",
        "tooltip": false
    },
    "network": {
        "interval": 1,
        "format": " {bandwidthDownBits}  {bandwidthUpBits}",
        "tooltip": false

    },

    "custom/spotify": {
        "return-type": "json",
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null",
        "tooltip": false,
        "escape": true,
        "on-click": "playerctl -p spotify play-pause",
        "on-scroll-up" : "playerctl -p spotify next",
        "on-scroll-down" : "playerctl -p spotify previous",
    },
    "pulseaudio": {
        "format": "{icon}{volume}%",
        "format-muted": " ",
        "format-icons": {
            "default": [" ", " ", " "]
        },
        "tooltip": false,
        "on-click": "pavucontrol",
        "scroll-step": 5,
    },

    "clock#1": {
        "format": " {:%H:%M}",
        "tooltip": false
    },
    "clock#2": {
        "format": "󰃭 {:%a %m/%d}",
        "tooltip": false
    },

    "tray": {
        "icon-size": 20,
        "spacing": 5
    },
}
